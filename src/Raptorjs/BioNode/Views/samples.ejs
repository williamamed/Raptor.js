        <script src="/public/bootstrap/js/jquery.js" type="text/javascript" ></script>
        <script src="/public/rmodules/Raptorjs/BioNode/keystroke.js" type="text/javascript" ></script>
        <script src="/public/bootstrap/js/bootstrap.min.js"></script>
        <script type="text/javascript" >
            $('body').ready(function() {
                var samples = '';
               
                $('.campo').keystroke({
                    attachTo: '.mio',
                    mode: 'samples',
                    template: {
                        info: 'Teclee su contraseña {COUNT} veces más.',
                        error: 'El texto es inválido, teclee su contraseña {COUNT} veces más.',
                    }
                });
                $('.campo').on('keystroke.samples', function(e, data, data1) {
                    $('#form-bio input[name="biosamples"]').val(data1);
                    $('.campo').hide();
                    $('#form-bio').submit();
                });
                $('.campo').on('keystroke.samplesstart', function(e, data, data1) {

                })
            })
            </script>
